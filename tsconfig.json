{
    "compilerOptions": {
        "target": "es2015",
        "module": "system",
        "outDir": "www/js",
        "baseUrl": ".",
        "moduleResolution": "node",
        "jsx": "react"
    },
    "include": ["src/*.ts", "src/*.tsx"],
    "watchOptions": {
        "watchFile": "useFsEvents",
        "watchDirectory": "useFsEvents",
        "fallbackPolling": "dynamicPriority",
        "synchronousWatchDirectory": true,
        "excludeDirectories": ["**/node_modules", "www"],
        "excludeFiles": []
    }
}
